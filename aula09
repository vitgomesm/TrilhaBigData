class NumeroImparException(Exception):
    def __init__(self, numero):
        super().__init__(f"O número {numero} é ímpar, somente pares são permitidos.")

def solicitar_numero_par():
    while True:
        try:
            numero = int(input("Digite um número inteiro: "))
            if numero % 2 != 0:
                raise NumeroImparException(numero)
            return numero
        except NumeroImparException as e:
            print(e)
        except ValueError:
            print("Erro: O valor inserido não é um número inteiro válido.")


def calcular_soma_pares():
    for i in range(3):
        print(f"\nPar {i+1}:")
        numero1 = solicitar_numero_par()
        numero2 = solicitar_numero_par()
        soma = numero1 + numero2
        print(f"A soma do par ({numero1}, {numero2}) é: {soma}")

calcular_soma_pares()
